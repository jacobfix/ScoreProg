<?xml version="1.0" encoding="utf-8"?>
<jacobfix.scorepredictor.components.PredictionView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="4dp">

    <ImageView android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/prediction_square"/>

    <TextView android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:lines="1"
        android:textColor="@android:color/white"
        android:textSize="38dp"
        android:text="" />

</jacobfix.scorepredictor.components.PredictionView>