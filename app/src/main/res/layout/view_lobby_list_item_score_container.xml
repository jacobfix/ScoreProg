<?xml version="1.0" encoding="utf-8"?>
<jacobfix.scorepredictor.components.LobbyListItemScoreContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/standard_text"
        android:textSize="18dp"
        android:text="27"/>

    <include layout="@layout/view_prediction"
        android:id="@+id/prediction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="visible" />

</jacobfix.scorepredictor.components.LobbyListItemScoreContainer>