<?xml version="1.0" encoding="utf-8"?>
<jacobfix.scorepredictor.components.LobbyListItemNameContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center">

    <TextView android:id="@+id/abbr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="@color/standard_text"
        android:textSize="40dp"
        android:text="ATL"/>

    <TextView android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="@color/standard_text"
        android:textSize="30dp"
        android:text="Falcons"
        android:lines="1"
        android:layout_marginTop="-8dp"
        android:visibility="visible"/>

</jacobfix.scorepredictor.components.LobbyListItemNameContainer>