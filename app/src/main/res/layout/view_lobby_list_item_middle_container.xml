<?xml version="1.0" encoding="utf-8"?>
<jacobfix.scorepredictor.LobbyListItemMiddleContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/start_time_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/standard_text"
            android:text="7:00"/>

        <TextView
            android:id="@+id/meridiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/standard_text"
            android:text=" PM"/>

    </LinearLayout>

    <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/standard_text"
        android:text="Locks @\n6:55 PM"/> -->

    <LinearLayout
        android:id="@+id/game_time_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/standard_text"
            android:text="12:06"/>

        <TextView
            android:id="@+id/quarter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/standard_text"
            android:text="4th"/>

    </LinearLayout>

    <TextView
        android:id="@+id/final_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/standard_text"
        android:text="FINAL"/>

    <ImageView
        android:id="@+id/lock"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:tint="@color/standard_text"
        android:src="@drawable/ic_lock_outline_black_48dp"/>

</jacobfix.scorepredictor.LobbyListItemMiddleContainer>