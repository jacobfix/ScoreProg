<?xml version="1.0" encoding="utf-8"?>
<jacobfix.scoreprog.components.LobbyListItemMiddleContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/darker_light_gray"
    android:elevation="4dp">

    <LinearLayout
        android:id="@+id/start_time_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/game_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/standard_text"
            android:text="7:00 PM"/>

        <TextView
            android:id="@+id/game_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="@color/standard_text"
            android:textSize="18sp"
            android:text="Sun, 7/19"/>

    </LinearLayout>

    <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/standard_text"
        android:text="Locks @\n6:55 PM"/> -->

    <LinearLayout
        android:id="@+id/game_time_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/standard_text"
            android:text="12:06"/>

        <TextView
            android:id="@+id/quarter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/standard_text"
            android:text="4th"/>

    </LinearLayout>

    <TextView
        android:id="@+id/final_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/standard_text"
        android:text="FINAL"/>

    <ImageView
        android:id="@+id/lock"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="4dp"
        android:tint="@color/standard_text"
        android:src="@drawable/ic_lock_black_24dp"/>

</jacobfix.scoreprog.components.LobbyListItemMiddleContainer>