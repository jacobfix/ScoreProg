<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here.263137 -->
        <item name="colorPrimary">#213642</item>
        <item name="colorPrimaryDark">#081922</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="MaterialTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="SpTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/TranslucentActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!-- For compatibility -->
        <item name="actionBarStyle">@style/TranslucentActionBar</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <color name="transparent_black">#60000000</color>
    <style name="TranslucentActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/transparent_black</item>
        <!-- For compatibility -->
        <item name="background">@color/transparent_black</item>
    </style>

    <style name="number_pad_button" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">34sp</item>
    </style>

</resources>
